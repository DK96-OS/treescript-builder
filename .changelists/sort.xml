<sorting>
    <!-- Root Module will only match files in top project directory -->
    <changelist name="Python Root Files" module="root">
        <files file_ext="py" />
    </changelist>

    <!-- Developer Tools Directories in Hidden Modules -->

    <changelist name="TreeScript Builder" module="hidden">
        <files first_dir=".ftb" />
    </changelist>
    <changelist name="Changelists Config" module="hidden">
        <files first_dir=".changelists" />
        <files filename_prefix="sort" />
        <files file_ext="xml" />
    </changelist>

    <changelist name="GitHub Workflows" module="hidden">
        <files first_dir=".github" />
        <files path_end="workflows" />
        <files file_ext="yml" />
    </changelist>

    <!-- Source Packages in the TreeScriptBuilder Module -->

    <changelist name="TreeScript Builder Data Package" module="module">
        <files path_end="data" />
        <files first_dir="treescript_builder" />
        <files file_ext="py" />
    </changelist>
    <changelist name="TreeScript Builder Input Package" module="module">
        <files path_end="input" />
        <files first_dir="treescript_builder" />
        <files file_ext="py" />
    </changelist>
    <changelist name="TreeScript Builder Tree Package" module="module">
        <files path_end="tree" />
        <files first_dir="treescript_builder" />
        <files file_ext="py" />
    </changelist>
    <changelist name="TreeScript Builder Main Package" module="module">
        <files first_dir="treescript_builder" />
        <files file_ext="py" />
    </changelist>

    <!-- Test Packages -->

    <changelist name="Test Fixtures &amp; Data Providers" module="module">
        <files first_dir="test" />
        <files filename_prefix="conftest" />
        <files file_ext="py" />
    </changelist>
    <changelist name="Test Main Package" module="module">
        <files first_dir="test" />
        <files path_end="treescript_builder" />
        <files filename_prefix="test_" />
        <files file_ext="py" />
    </changelist>
    <changelist name="Test Data Package" module="module">
        <files first_dir="test" />
        <files path_end="data" />
        <files file_ext="py" />
    </changelist>
    <changelist name="Test Input Package" module="module">
        <files first_dir="test" />
        <files path_end="input" />
        <files file_ext="py" />
    </changelist>
    <changelist name="Test Tree Package" module="module">
        <files first_dir="test" />
        <files path_end="tree" />
        <files file_ext="py" />
    </changelist>

</sorting>